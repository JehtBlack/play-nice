{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'play-nice'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=play-nice",
                    "--package=play-nice"
                ],
                "filter": {
                    "name": "play-nice",
                    "kind": "bin"
                }
            },
            "args": [],
            "windows": {
                "env": {
                    "BEVY_ASSET_ROOT": "${workspaceFolder}/",
                    "RUST_LOG": "info,play_nice=trace",
                },
            },
            "linux": {
                "env": {
                    "RUST_BACKTRACE": "full",
                    "BEVY_ASSET_ROOT": "${workspaceFolder}/",
                    "RUST_LOG": "info,play_nice=trace",
                    "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${userHome}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib",
                },
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'play-nice'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=play-nice",
                    "--package=play-nice"
                ],
                "filter": {
                    "name": "play-nice",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}